<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Edit text to enter name -->
    <EditText
        android:id="@+id/enterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:textSize="12sp"
        android:layout_margin="2sp"/>

    <EditText
        android:id="@+id/enterRpm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter RPM"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/enterKw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter KW"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Frame Size"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterAmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Ampere"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterHz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Hz"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterPow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Power"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterBear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Bearing"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Status"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Description"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/enterCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:hint="Enter Compatibility"
        android:textSize="12sp" />

    <Button
        android:id="@+id/addEntry"
        android:layout_width="150sp"
        android:layout_gravity="center"
        android:text="Add Entry"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"/>



    <!-- Button to print Name -->
    <Button
        android:id="@+id/showEntry"
        android:layout_width="150sp"
        android:layout_gravity="center"
        android:text="Show Entry"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Text view to get all name -->
        <TextView
            android:id="@+id/NameEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/RpmEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/KwEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/FrameSizeEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/AmpereEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/HzEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/PowerEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/BearingEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/StatusEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/DescriptionEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/CompatibilityEditOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="50dp"
            android:hint=""
            android:textColor="@android:color/black" />

    </ScrollView>

</LinearLayout>
